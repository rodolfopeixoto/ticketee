<header>
  <% title(@project.name, 'Projects') %>

  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>

<ul class="actions">
  <li>
    <%= link_to 'Edit Project', edit_project_path(@project), class: 'edit' %>
  </li>

  <li>
    <%= link_to 'Delete Project', project_path(@project),
                              method: :delete,
                              data: { confirm: 'Area you sure you want to delete this project?' },
                              class: 'delete'%>
  </li>
</ul>
</header>

<header>
  <h2>Tickets</h2>

  <ul>
    <li class="actions">
      <%= link_to 'New Ticket', new_project_ticket_path(@project) %>
    </li>
  </ul>
</header>