<header>
  <% title(@project.name, 'Projects') %>

  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>

<ul class="actions">
  <li><%= link_to 'Edit Project', edit_project_path(@project), class: 'edit' %></li>

  <li><%= link_to 'Delete Project', project_path(@project),
                              method: :delete,
                              data: { confirm: 'Area you sure you want to delete this project?' },
                              class: 'delete'%></li>
</ul>
</header>